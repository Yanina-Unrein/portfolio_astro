---
const {date, title, description, link = [] } = Astro.props;
---


<div class="experience-item">
    <div class="dot"></div>
    <time class="date">{date}</time>
    <h3 class="title">{title}</h3>
    <p class="description">{description}</p>
</div>


<style>
    .experience-item {
        position: relative;
        padding-left: 2rem; /* Same as padding-left in .timeline */
    }
    
    .dot {
        position: absolute;
        width: 0.75rem;
        height: 0.75rem;
        background-image: linear-gradient(225deg, #FF3CAC 50%, #2B86C5 50%);
        transform: scale(1.1);
        border-radius: 50%; 
        top: 1rem;
        left: -0.375rem;
        margin-top: 0.375rem;
    }
    
    .date {
        padding-bottom: 0.35rem;
        font-size: 0.875rem;
        color: #9ca3af;
    }
    
    .title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #f9fafb;
        padding-bottom: 0.30rem;
    }
    
    .description {
        margin-bottom: 1rem;
        font-size: 1rem;
        color: #d1d5db; 
    }
    
    .learn-more {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        color: #f9fafb; 
        background-color: #1f2937; 
        border: 1px solid #4b5563; 
        border-radius: 0.375rem;
        text-decoration: none;
    }
    
    .learn-more:hover {
        background-color: #374151; 
        color: #3b82f6;
    }
    
    .learn-more:focus {
        outline: none;
        box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.5); 
    }
    
    .icon {
        width: 0.75rem;
        height: 0.75rem;
        margin-left: 0.5rem;
        transform: rotate(0deg);
    }
    
</style>